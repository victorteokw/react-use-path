{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "outDir": "./lib",
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./lib",
    "declarationMap": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
